<Window x:Class="UnityL10nToolPatcherCShop.CustomSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnityL10nToolPatcherCShop"
        mc:Ignorable="d"
        Title="CustomSplash" Height="200" Width="320"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        ResizeMode="NoResize" Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image x:Name="SplashImage" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="320" Height="180" Stretch="Fill"/>
        <ProgressBar x:Name="ProgressBar1" Grid.Row="1" Width="320" Height="20" IsIndeterminate="True" Background="Transparent" BorderThickness="0"/>
        <TextBlock x:Name="currentStateTextBlock" Grid.Row="1" Text="Check lastest version...(Test)" HorizontalAlignment="Center"/>
    </Grid>
</Window>
