<UserControl x:Class="UnityL10nToolCShop.ProjectConfigSplash"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnityL10nToolCShop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#33000000" >
        <Grid Width="400" Height="100" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ProgressText1" Grid.Row="0" Text="Progress Text"  Margin="30,0" VerticalAlignment="Bottom" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <ProgressBar x:Name="ProgressBar1" Grid.Row="1" Width="100" Height="20" IsIndeterminate="True" Margin="30,0" />
            <TextBlock x:Name="ProgressTextBlock1" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="20,10,20,10"/>
        </Grid>
    </Grid>
</UserControl>
