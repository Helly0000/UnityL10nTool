<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnityL10nToolCShop"
        mc:Ignorable="d"
        x:Class="UnityL10nToolCShop.ProjectConfig"
        
        Title="ProjectConfig" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <!--xmlns:SampleDataSource="clr-namespace:Expression.Blend.SampleData.SampleDataSource"-->
    <Window.Resources>
        <!--SampleDataSource:SampleDataSource x:Key="SampleDataSource" d:IsDataSource="True"/-->
        <DataTemplate x:Key="CollectionItemTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Key}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ValueItemTemplate">
            <StackPanel>
                <TextBlock Text="{Binding assetsName}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="optionsItemTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Property1}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="GameNameLabel" Content="Game Name" FontSize="16"/>
            <Label Grid.Column="1" x:Name="MakerNameLabel" Content="Maker Name" VerticalAlignment="Bottom"/>
            <Label Grid.Column="2" x:Name="GamePathLabel"  VerticalAlignment="Bottom" >
                <TextBlock x:Name="GamePathTextBlock" TextTrimming="CharacterEllipsis"><Run Text="Game PathVeryLonggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg"/></TextBlock>
            </Label>
        </Grid>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="New" VerticalAlignment="Top" Margin="5"/>
            <Button Content="Save" VerticalAlignment="Top" Margin="5"/>
        </StackPanel>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <TabControl TabStripPlacement="Left">
                <TabItem Header="Font Asset">
                    <TabControl x:Name="FontAssetTabControl" ItemsSource="{Binding Collection}" >
                        <!--d:DataContext="{StaticResource SampleDataSource}" ItemTemplate="{DynamicResource CollectionItemTemplate}"-->
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Key}" />
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="FontAssetMapDataGrid"  Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Value}" AutoGenerateColumns="False" >
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Binding="{Binding Path=assetsName}" Header="AssetsName" IsReadOnly="True"/>
                                            <DataGridTextColumn Binding="{Binding Path=assetName}" Header="AssetsName" IsReadOnly="True"/>
                                            <DataGridTextColumn Binding="{Binding Path=containerPath}" Header="ContainerPath" IsReadOnly="True"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <ListBox Grid.Row="0" ItemsSource="{Binding Path=SelectedItem.options, ElementName=FontAssetMapDataGrid}"></ListBox>
                                    </Grid>
                                    
                                </Grid>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </TabItem>
                <TabItem Header="TextAsset"/>
                <TabItem Header="Online Resource"/>
                <TabItem Header="Updater"/>
            </TabControl>
        </Grid>
    </Grid>
</Window>
